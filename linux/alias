unset GREP_OPTIONS
unalias docs &> /dev/null # unalias any alias
alias reload='source ~/.bash_profile && source ~/.bashrc'
export HISTTIMEFORMAT="%d/%m/%y %T   "
alias home='clear && cd ~ && pwd'
alias downloads='clear && cd ~/Downloads && pwd'  
alias c='clear'
alias h=" history "
alias su="sudo -i"
alias susu="sudo bash"
alias shutdown="sudo shutdown -h now"
alias restart="init 6"
alias topcpu='ps -eo pcpu,args --sort=-pcpu | head -n 50 | awk '"'"'{printf("%13.2f%%\t", $1); print $2}'"'"''
alias topmem='ps -eo "rss,args" --sort=-rss | head -n 50 | awk "{hr=\$1/1024; printf(\"%13.2fM\t\", hr); print \$2}"'
alias topdisk='iotop -aoP'
alias topdisk1='iostat -x 1'
alias topdisk1='iostat -mxy 1'
alias topfile='du -hsx * | sort -nr | head -n 20'
alias na='nano -A -cilmS' 
alias nano='nano -A -cilmS' 
alias py='python3' 
#alias versions="python --version && ruby -v && rails -v && node --version && mongo --version && postgres --version"
alias rm='rm -rf -i'  
alias lsn='stat -c "%A %a %U %G %s %n" *'
alias ls='ls -hp'
alias ll='ls -alshp --color=auto'
alias lll='pwd && ls -alshtrin --color=auto --time-style=long-iso'
alias la='ls -la --color=auto'
alias l='ls -CF --color=auto'
alias cll="clear; ls -lAh --color=auto"
alias ..='cd ../'                           # Go back 1  level
alias .2='cd ../../'                        # Go back 2  levels
alias .3='cd ../../../'                     # Go back 3  levels
alias .4='cd ../../../../'                  # Go back 4  levels
alias .5='cd ../../../../../'               # Go back 5  levels
alias .6='cd ../../../../../../'            # Go back 6  levels
alias back='cd -'
alias ~='cd ~'
alias o='open'
alias www='cd /var/www/html'
alias trash='safe_rm'
# Colorize grep output (good for log files)
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
#alias grep='grep -H -n'
alias cp='cp -i'
alias mv='mv -i'
#alias cwd='pwd | tr -d "\r\n" | pbcopy' #copy working directory
alias p="pwd"
alias h='history'
alias ppath="echo $PATH | tr ':' '\n'" #print path
alias untar="tar -xvf"
alias rtags="find . -name '*.rb' | xargs /usr/bin/ctags -R -a -f TAGS"
alias settimezone='timedatectl set-timezone Asia/Kolkata && timedatectl'
alias make1mb=' mkfile 1m ./1MB.dat '         # make1mb:      Creates a file of 1mb size (all zeros)
alias make5mb=' mkfile 5m ./5MB.dat '         # make5mb:      Creates a file of 5mb size (all zeros)
alias make10mb=' mkfile 10m ./10MB.dat '      # make10mb:     Creates a file of 10mb size (all zeros)
#alias getsshkey="pbcopy < ~/.ssh/id_rsa.pub" 
alias hc='history -c'
alias ch='cat /dev/null > ~/.bash_history && history -c'
alias myip='curl ifconfig.me'
alias netstatss='netstat -tulpan | grep LISTEN'
alias ps='ps -u $USER'
alias ifconfig='ifconfig -a'
alias logs='tail -f /var/log/*.log'
alias ts='tail -f /var/log/syslog'
alias bootlog='sudo dmesg'
alias hardware='sudo lshw'
alias net='ss -s'
alias snaplist='snap refresh --list'
alias snapref='snap refresh'
alias svclist1='systemctl list-units --type=service'
alias svclist='systemctl --type=service list-unit-files'
alias svcrunn='systemctl --type service --state running'
alias svcrunni='systemctl list-units --all --type=service --no-pager | grep running'
alias update="sudo apt-get update -y"
alias upgrade="sudo apt-get dist-upgrade -y && sudo aptitude safe-upgrade"
alias clean="sudo apt-get autoremove -y && sudo apt-get clean -y && sudo apt-get autoclean -y && sudo apt-get -f install -y && sudo dpkg --configure -a && sudo journalctl --rotate && sudo journalctl --vacuum-size=0"

# Case-insensitive globbing (used in pathname expansion)
#shopt -s nocaseglob

# Autocorrect typos in path names when using `cd`
#shopt -s cdspell

# This will ensure that multiple line commands stay together in your history.
#shopt -s cmdhist

# Update dot files
alias update_dotfiles='clear >$(tty) && cd ~/bin/dotfiles && git pull && cd /tmp/ && source ~/.bash_profile'

# Uninstall dot files
alias uninstall_dotfiles='clear >$(tty) && cd /tmp && rm -rf ~/bin && sed -i "/\. ~\/bin\/dotfiles\/bashrc/d" ~/.bashrc && bash && source ~/.bash_profile && bash'